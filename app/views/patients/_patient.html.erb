<ul>
  <li>
    MR: MR<%="%06d" % patient.id%>
  </li>
  <li>
    Fullname: <%= "#{patient.last_name}, #{patient.first_name} #{patient.middle_name}"%>
  </li>
  <li>
    Age: <%=Time.now.year - patient.birth.year%>
  </li>
  <li>
    Gender: <%=patient.gender%>
  </li>
  <li>
    Status: <%=patient.status%>
  </li>
  <li>
    Location name:  <%=link_to patient.location.name, location_path(patient.location_id)%>
  </li>
  <li>
    Viewed Count:  <%=patient.viewed_count%>
  </li>
  <li>
    <%=link_to 'show', patient_path(patient.id)%><br>
    <%=link_to 'edit', edit_patient_path(patient.id)%> <br>
    <%=link_to 'delete', patient_path(patient.id), method: :delete%>
  </li>
</ul>
